{
  "name": "brea",
  "version": "0.1.0",
  "private": true,
  "description": "Brea - AI Dating Liaison",
  "scripts": {
    "dev:backend": "pnpm --filter @brea/backend dev",
    "dev:mobile": "pnpm --filter @brea/mobile start",
    "build:backend": "pnpm --filter @brea/backend build",
