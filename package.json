{
  "name": "brea-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "backend": "npm run dev --workspace=@brea/backend",
    "mobile": "npm run start --workspace=@brea/mobile",
    "build:backend": "npm run build --workspace=@brea/backend",
    "db:generate": "npm run db:generate --workspace=@brea/backend",
    "db:push": "npm run db:push --workspace=@brea/backend",
    "db:migrate": "npm run db:migrate --workspace=@brea/backend"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
