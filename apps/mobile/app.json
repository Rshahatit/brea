{
  "expo": {
    "name": "Brea",
    "slug": "brea",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "brea",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D0D0D"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.brea.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Brea needs access to your microphone for voice conversations.",
        "NSCameraUsageDescription": "Brea needs access to your camera to take profile photos.",
        "NSPhotoLibraryUsageDescription": "Brea needs access to your photo library to select profile photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D0D0D"
      },
      "package": "com.brea.app",
      "permissions": [
        "RECORD_AUDIO",
        "CAMERA",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Brea needs access to your microphone for voice conversations."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Brea needs access to your photos for your profile."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
